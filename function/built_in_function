ğŸŒšceil:
double x = 8.0 / 7.0;     
cout << x << endl;          //x=1.14286
cout << ceil(x);            //x=2
cout << ceil(8,7);          //x=2

ğŸŒšfloor:
double x = 9.89;
cout << floor(x) <<endl     //9

ğŸŒšround:
double x = 9.89;
cout << round(x) <<endl      //10
double y = 9.42;
cout << round(y) <<endl      //9

ğŸŒšreverse:
int ara[5] = {1,2,3,4,5}
reverse(&ara[0], &ara[3]); or, reverse(ara,ara+3);
for(int i=0; i<5; i++)}
cout<<ara[i]<<" ";
cout<<endl;            //3 2 1 4 5
}

ğŸŒšsort:
int ara[7] = {6,1,3,2,100,7,159};
sort(ara+2,ara+6);
for(int i=0; i<7; i++){
   cout<<ara[i]<<" ";          //6 1 2 3 7 100 150
   cout<<endl;
 }






















